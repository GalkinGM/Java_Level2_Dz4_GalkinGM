<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Button text="send" GridPane.columnIndex="1" GridPane.rowIndex="2" onAction="#clickSend"/>
    <TextArea fx:id="textArea" GridPane.columnIndex="0" GridPane.rowIndex="0" prefWidth="300"/>
    <TextArea fx:id="textAreaSend" GridPane.columnIndex="0" GridPane.rowIndex="1" prefWidth="300" onKeyReleased="#textAreaSend"/>
    <TextField fx:id="textIn" GridPane.columnIndex="0" GridPane.rowIndex="2" prefWidth="300" onAction="#clickSend"/>


</GridPane>